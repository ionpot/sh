format='%C(yellow)%h (%ci) %cn%Creset%n%s%n'

alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias ge='git reset'
alias gf='git fetch --prune'
alias gg="git log --format='$format'"
alias gh='git push'
alias gl='git pull'
alias gm='git merge'
alias go='git checkout'
alias gr='git rebase'
alias gt='git status'

alias gbc='git branch -r --contains'
alias gbe='git branch --edit-description'
alias gca='git commit --amend --no-edit'
alias gcf='git config'
alias gdh='git diff HEAD'
alias gcl='git clone'
alias gcn='git clean'
alias gcp='git cherry-pick'
alias gdc='gd --cached'
alias gds='git diff --stat --summary'
alias ggc='git gc'
alias ggh='gg | head -n 14'
alias grt='git remote'
alias gsa='git stash apply'
alias gsd='git stash drop'
alias gsl='git stash list'
alias gsp='git stash pop'
alias gss='git stash save'
alias gtn='git status -uno'

alias gchk='git ls-files --error-unmatch'
alias grpo='git remote prune origin'
