gbd () {
    local name=$(git rev-parse --abbrev-ref HEAD)
    git config "branch.$name.description"
}

gclgh () {
    local url="https://github.com/$1/$2.git"
    git clone "$url"
}

gg () {
    local format='%C(yellow)%h (%ci) %cn%Creset%n%s%n'
    git log --format="$format" $@
}

ggh () {
    gg $@ | head -n 14
}
